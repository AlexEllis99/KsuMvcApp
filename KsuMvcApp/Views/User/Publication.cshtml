@model KsuMvcApp.Models.Query

@{
    ViewBag.Title = "Создать запрос";
}


<div class="wrapper">
	@Html.Partial("_MenuPartial")

	<div class="content-wrapper">
		@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal myform">
			<h4>Запрос</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<input type="hidden" name="Id_User" value="@ViewBag.UserID" />

			<div class="form-group">
				<label class="control-label col-md-2">Тип запроса</label>
				<div class="col-md-10">
					<select name="Query_Type" class="selectpicker">
						<option value="Изменение">Изменение</option>
						<option value="Добавление">Добавление</option>
						<option value="Удаление">Удаление</option>
					</select>
				</div>
			</div>


			<div class="form-group">
				<label class="control-label col-md-2">Заголовок запроса</label>
				<div class="col-md-10">
					@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Комментарий (необязательно)</label>
				<div class="col-md-10">
					@Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
				</div>
			</div>


			<input type="hidden" name="Created" value="@DateTime.Now" />

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Отправить" class="btn btn-default" />
				</div>
			</div>
		</div>
}
	</div>
	
</div>


